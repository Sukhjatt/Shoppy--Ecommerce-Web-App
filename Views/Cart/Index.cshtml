@model List<Shoppy.Models.CartItem>

@{
    ViewData["Title"] = "Your Shopping Cart";
}

<div class="container my-5">
    <h2 class="mb-4">Your Cart</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center">
            Your cart is empty. <a href="/" class="alert-link">Continue shopping</a>.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table align-middle">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Product</th>
                        <th scope="col" style="width: 150px;">Price</th>
                        <th scope="col" style="width: 180px;">Quantity</th>
                        <th scope="col" style="width: 150px;">Total</th>
                        <th scope="col" style="width: 100px;"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="@item.ImageUrl" alt="@item.ProductName" class="img-thumbnail me-3" style="width: 80px; height: 80px; object-fit: cover;" />
                                    <div>
                                        <strong>@item.ProductName</strong><br />
                                        <small class="text-muted">ID: @item.ProductId</small>
                                    </div>
                                </div>
                            </td>
                            <td>$@item.Price.ToString("F2")</td>
                            <td>
                                <div class="input-group input-group-sm">
                                    <form method="post" asp-action="DecrementQuantity" asp-controller="Cart" asp-route-id="@item.ProductId" class="d-inline">
                                        <button class="btn btn-outline-secondary" type="submit" aria-label="Decrease quantity">−</button>
                                    </form>
                                    <input type="text" class="form-control text-center" value="@item.Quantity" readonly style="max-width: 50px;" />
                                    <form class="d-inline">
                                        <a class="btn btn-outline-secondary" type="submit" aria-label="Increase quantity">+</a>
                                    </form>
                                </div>
                            </td>
                            <td><strong>$@(item.Price * item.Quantity)</strong></td>
                            <td>
                                <form method="post" asp-action="RemoveFromCart" asp-controller="Cart" asp-route-id="@item.ProductId">
                                    <button type="submit" class="btn btn-danger btn-sm" title="Remove item">
                                        <i class="bi bi-trash"></i> Remove
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3" class="text-end fw-bold">Total:</td>
                        <td colspan="2" class="fw-bold">
                            $@Model.Sum(i => i.Price * i.Quantity).ToString("F2")
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="d-flex justify-content-between">
            <a class="btn btn-outline-primary" asp-area="" asp-controller="Products" asp-action="Listing">Continue Shopping</a>
            <a href="/Checkout" class="btn btn-success">Proceed to Checkout</a>
        </div>
    }
</div>
